<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_above="@id/lb"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:src="@drawable/ic_more_vert_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginTop="0dp"
            android:background="#4F888888"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/news1"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:scaleType="fitXY"
                android:text="India News 18"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:scaleType="fitXY"
                android:text="21k Followers"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <LinearLayout
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:background="@drawable/shadow_background"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/star"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textColor="#0091EA"
            android:id="@+id/pwishlist"
            android:scaleType="fitXY"
            android:text="Follow"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="2dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/pname"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:text="Elon Musk becomes second-richest person in the world, overtakes Bill Gates after surge in Tesla shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/pimg"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </RelativeLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingVertical="0dp"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textColor="@color/hint"
            android:text="24 Nov 20 ."
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:paddingLeft="5dp"
            android:textSize="12dp"
            android:textColor="@color/hint"
            android:text="12.36 PM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="0dp"
        android:background="#4F888888"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="#EC000000"
            android:justificationMode="inter_word"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elon Musk on Monday became second-richest person in the world leaving behind Bill Gates. Tesla co-founder's net worth soared ...

\nElon Musk on Monday became second-richest person in the world leaving behind Bill Gates. Tesla co-founder's net worth soared from $7.2 billion to $127.9 billion, driven by a surge in the company's shares.

\nAccording to Bloomberg Billionaires Index, Elon Musk has added $100.3 billion to his net worth in 2020.

\nAccording to a report in Fortune, Elon Musk's wealth ranks have largely been driven by Tesla i.e., about three-quarters. His net worth is mostly comprised of Tesla shares that are valued more than four times his stake in SpaceX.
\nAccording to Bloomberg Billionaires Index, Elon Musk has added $100.3 billion to his net worth in 2020.

\nAccording to a report in Fortune, Elon Musk's wealth ranks have largely been driven by Tesla i.e., about three-quarters. His net worth is mostly comprised of Tesla shares that are valued more than four times his stake in SpaceX.

\nBill Gates held the top ranking for years before being overtaken by Amazon.com founder Jeff Bezos in 2017. Bill Gates's net worth is $127.7 billion."
    /></LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="#4F888888"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="#57EDEDED"
        android:id="@+id/lb"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:layout_weight="2"
            android:paddingVertical="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/add_button_border1"
                android:visibility="visible"
                android:paddingLeft="10dp"
                android:textSize="12dp"
                android:textColor="#0091EA"
                android:hint="Add your Comment"
                android:layout_width="200dp"
                android:layout_height="35dp" />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/comment"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/like"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:paddingLeft="5dp"
                android:textSize="12dp"
                android:textColor="#0091EA"
                android:scaleType="fitXY"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/whatsapp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:paddingLeft="5dp"
                android:textSize="12dp"
                android:textColor="#0091EA"
                android:scaleType="fitXY"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/retweet"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:paddingLeft="5dp"
                android:textSize="12dp"
                android:textColor="#0091EA"
                android:scaleType="fitXY"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>