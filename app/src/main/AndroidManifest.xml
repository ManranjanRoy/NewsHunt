<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manoranjan.newshunt1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.AddVideoNewsForm" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activity.MyCommisionActivity"
            android:label="My Commision"
            android:parentActivityName=".Activity.DashBoardActivity" />
        <activity
            android:name=".Activity.AddAdsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MyAdsActivity"
            android:label="My Ads"
            android:parentActivityName=".Activity.DashBoardActivity" />
        <activity
            android:name=".Activity.ReportersNewsActivity"
            android:label="My News"
            android:parentActivityName=".Activity.DashBoardActivity" />
        <activity
            android:name=".Activity.AddWalletActivity"
            android:label="Recharge Wallet"
            android:parentActivityName=".Activity.MyWalletActivity" />
        <activity
            android:name=".Activity.MyWalletActivity"
            android:label="My Wallet"
            android:parentActivityName=".Activity.DashBoardActivity" />
        <activity
            android:name=".Activity.UploadActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AddVideoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.AddNewsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.DashBoardActivity"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SignupRepoterActivity"
            android:label="Signup"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SingleNewsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SingleVideoActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>